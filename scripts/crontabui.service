[Unit]
Description=Start CrontabUI
After=network.target

[Service]
Environment=NODE_PORT=3001
Environment=CRON_DB_PATH=/home/pi
Type=simple
User=pi
ExecStart=/usr/bin/node crontab-ui
Restart=on-failure

[Install]
WantedBy=multi-user.target

